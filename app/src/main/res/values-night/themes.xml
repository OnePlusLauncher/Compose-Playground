<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ComposePlayground" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status/Nav bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Opt out of the system automatically recolouring status and navigation bar icons. -->
        <item name="android:enforceStatusBarContrast" tools:ignore="NewApi">false</item>
        <item name="android:enforceNavigationBarContrast" tools:ignore="NewApi">false</item>
    </style>
</resources>